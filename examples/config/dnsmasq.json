{
  "version": "1",
  "server": {
    "enabled": true,
    "domain": "lan",
    "leasefile": "/var/lib/misc/dnsmasq.leases",
    "authoritative": true,
    "log_dhcp": false,
    "comment": "Combined DHCP and DNS server"
  },
  "dhcp_pools": {
    "lan": {
      "interface": "lan",
      "start": 100,
      "limit": 150,
      "leasetime": "12h",
      "dhcpv4": "server",
      "dhcpv6": "disabled",
      "ra": "disabled",
      "ra_management": 0,
      "ra_default": 0,
      "dns": ["192.168.1.1"],
      "domain": "lan",
      "comment": "Main LAN DHCP pool (192.168.1.100-250)"
    }
  },
  "static_leases": [
    {
      "name": "printer",
      "mac": "00:11:22:33:44:55",
      "ip": "192.168.1.10",
      "comment": "Network printer"
    }
  ]
}

#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # Stop and disable service
        if systemctl is-active --quiet jack; then
            echo "Stopping jack service..."
            systemctl stop jack
        fi

        if systemctl is-enabled --quiet jack 2>/dev/null; then
            echo "Disabling jack service..."
            systemctl disable jack
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0

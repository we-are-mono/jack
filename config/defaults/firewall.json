{
  "version": "1",
  "enabled": true,
  "defaults": {
    "input": "DROP",
    "forward": "DROP",
    "output": "ACCEPT",
    "syn_flood": true,
    "drop_invalid": true
  },
  "zones": {
    "wan": {
      "name": "wan",
      "interfaces": ["wan"],
      "input": "DROP",
      "forward": "DROP",
      "output": "ACCEPT",
      "masquerade": true,
      "mtu_fix": true,
      "family": "ipv4",
      "comment": "WAN zone with NAT"
    },
    "lan": {
      "name": "lan",
      "interfaces": ["lan"],
      "input": "ACCEPT",
      "forward": "ACCEPT",
      "output": "ACCEPT",
      "masquerade": false,
      "family": "ipv4",
      "comment": "LAN zone"
    }
  },
  "forwardings": [
    {
      "src": "lan",
      "dest": "wan",
      "family": "ipv4",
      "comment": "LAN to WAN forwarding"
    }
  ],
  "rules": [
    {
      "name": "Allow-Established-Related-Input",
      "src": "wan",
      "target": "ACCEPT",
      "family": "ipv4"
    },
    {
      "name": "Allow-Established-Related-Forward",
      "src": "wan",
      "dest": "forward",
      "target": "ACCEPT",
      "family": "ipv4"
    },
    {
      "name": "Allow-ICMP",
      "src": "wan",
      "proto": "icmp",
      "target": "ACCEPT",
      "family": "ipv4"
    },
    {
      "name": "Allow-SSH-LAN",
      "src": "lan",
      "proto": "tcp",
      "dest_port": "22",
      "target": "ACCEPT",
      "family": "ipv4"
    }
  ],
  "port_forwards": []
}
